commands:
  01_fetch_yarn:
    test: '[ ! -f /usr/bin/yarn ] && echo "Yarn not found, installing..."'
    command: |
      curl -sL https://dl.yarnpkg.com/rpm/yarn.repo -o /etc/yum.repos.d/yarn.repo
  02_print_curl_results:
    command: ls
  03_install_yarn:
    command: sudo yum install yarn
  03_print_errors:
    command: cat /var/log/cfn-init.log
